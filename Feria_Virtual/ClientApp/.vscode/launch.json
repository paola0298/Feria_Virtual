    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch firefox against localhost",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:4200/#",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Attach to firefox",
            "type": "firefox",
            "request": "attach",
            "url": "http://localhost:4200/#",
            "webRoot": "${workspaceFolder}"
        }
    ]
}